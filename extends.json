{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types" : [ "node" ],
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
